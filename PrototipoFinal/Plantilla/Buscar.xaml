<Page
    x:Class="PrototipoFinal.Plantilla.Buscar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PrototipoFinal.Plantilla"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Búsqueda de Pacientes" 
                      Foreground="#67b2a2"
                      FontSize="24"
                      FontWeight="SemiBold"
                      Margin="0,0,0,20"/>
            <Rectangle Height="3" Fill="#badb30" Width="60" 
                      HorizontalAlignment="Left" Margin="0,0,0,20"/>
        </StackPanel>

        <!-- Controles de búsqueda -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <ComboBox x:Name="cmbTipoBusqueda" 
                      Header="Buscar por:"
                      Margin="0,0,0,10"
                      SelectionChanged="CmbTipoBusqueda_SelectionChanged">
                <ComboBoxItem Content="Cédula"/>
                <ComboBoxItem Content="Nombre"/>
            </ComboBox>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtBusqueda"
                        PlaceholderText="Ingrese el término de búsqueda"
                        Margin="0,0,10,0"
                        BorderThickness="0,0,0,2"
                        BorderBrush="#67b2a2"
                        Background="#f5f5f5"/>

                <Button Grid.Column="1"
                        Content="Buscar"
                        Click="BtnBuscar_Click"
                        Background="#67b2a2"
                        Foreground="White"
                        Padding="20,8"/>
            </Grid>
        </StackPanel>

        <!-- Grid de resultados -->
        <GridView x:Name="grdResultados" 
                  Grid.Row="2"
                  SelectionMode="Single"
                  ItemClick="GrdResultados_ItemClick"
                  IsItemClickEnabled="True">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="#f5f5f5" 
                          Padding="15" 
                          Width="300"
                          CornerRadius="8"
                          Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding NombreCompleto}" 
                                 FontWeight="SemiBold"
                                 Foreground="#67b2a2"/>

                        <TextBlock Grid.Row="1" 
                                 Text="{Binding Cedula}"
                                 Foreground="Gray"
                                 FontSize="14"/>

                        <TextBlock Grid.Row="2" 
                                 Text="{Binding FechaRegistro}"
                                 Foreground="Gray"
                                 FontSize="12"/>

                        <StackPanel Grid.Row="3" 
                                  Orientation="Horizontal"
                                  Margin="0,10,0,0">
                            <TextBlock Text="IMC: "/>
                            <TextBlock Text="{Binding IMC}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
